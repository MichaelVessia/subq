{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "tsBuildInfoFile": ".tsbuildinfo/tsconfig.tsbuildinfo",
    "module": "preserve",
    "moduleResolution": "bundler",
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "verbatimModuleSyntax": false
  },
  "references": [{ "path": "../shared" }]
}

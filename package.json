{
  "name": "scalability",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.13",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '@scale/*' dev",
    "dev:api": "bun run --filter @scale/api dev",
    "dev:web": "bun run --filter @scale/web dev",
    "build": "bun run --filter '*' build",
    "typecheck": "tsc -b tsconfig.json && tsc -p packages/web --noEmit",
    "check": "bun run typecheck && bun run lint && bun run format && bun run test",
    "lint": "biome lint . || nix develop --command biome lint .",
    "lint-fix": "biome lint --write . || nix develop --command biome lint --write .",
    "format": "biome format . || nix develop --command biome format .",
    "format-fix": "biome format --write . || nix develop --command biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "effect-language-service patch",
    "seed": "bun run --filter @scale/api seed",
    "migrate": "bun run --filter @scale/api migrate"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-export-namespace-from": "^7.24.7",
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "@biomejs/biome": "^2.2.0",
    "@effect/language-service": "latest",
    "@effect/vitest": "^0.27.0",
    "@types/bun": "^1.2.20",
    "alchemy": "^0.78.0",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "lefthook": "^2.0.2",
    "typescript": "^5.6.2",
    "vitest": "^4.0.14"
  }
}

{
	"name": "subq",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.2.13",
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "docker compose -f packages/api/docker-compose.yml up -d && bun run --filter '@subq/*' dev",
		"dev:jaeger:stop": "docker compose -f packages/api/docker-compose.yml down",
		"dev:api": "bun run --filter @subq/api dev",
		"dev:web": "bun run --filter @subq/web dev",
		"build": "bun run --filter '*' build",
		"typecheck": "tsc -b tsconfig.json && tsc -p packages/web --noEmit",
		"check": "bun run typecheck && bun run lint && bun run format && bun run test",
		"lint": "oxlint packages/",
		"lint-fix": "oxlint --fix packages/",
		"format": "oxfmt --check packages/api/src packages/api/tests packages/api/scripts packages/shared/src packages/cli/src packages/cli/tests packages/web/src packages/web/e2e scripts '!**/*.css'",
		"format-fix": "oxfmt packages/api/src packages/api/tests packages/api/scripts packages/shared/src packages/cli/src packages/cli/tests packages/web/src packages/web/e2e scripts '!**/*.css'",
		"test": "bun test packages/api/tests",
		"test:watch": "bun test --watch packages/api/tests",
		"test:cli": "bun run --filter @subq/cli test",
		"test:e2e": "bun run --filter @subq/web test:e2e",
		"test:all": "bun run test && bun run test:cli",
		"coverage": "bun test --coverage packages/api/tests",
		"prepare": "effect-language-service patch",
		"seed": "bun run --filter @subq/api seed",
		"seed:prod": "bun run scripts/seed-prod.ts",
		"migrate": "bun run --filter @subq/api migrate",
		"deploy": "flyctl deploy --remote-only",
		"cli": "bun run packages/cli/src/main.ts"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.8",
		"@babel/core": "^7.25.2",
		"@babel/plugin-transform-export-namespace-from": "^7.24.7",
		"@babel/plugin-transform-modules-commonjs": "^7.24.8",
		"@codeforbreakfast/bun-test-effect": "^0.4.1",
		"@effect/language-service": "latest",
		"@types/bun": "^1.2.20",
		"babel-plugin-annotate-pure-calls": "^0.5.0",
		"lefthook": "^2.0.2",
		"oxfmt": "^0.20.0",
		"oxlint": "^1.35.0",
		"typescript": "^5.6.2"
	}
}
